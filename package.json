{
    "name": "nextjs-handbook",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint --fix",
        "prettier": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\""
    },
    "dependencies": {
        "@types/node": "20.0.0",
        "@types/react": "18.2.5",
        "@types/react-dom": "18.2.4",
        "autoprefixer": "10.4.14",
        "eslint": "8.39.0",
        "eslint-config-next": "13.4.1",
        "next": "13.4.1",
        "postcss": "8.4.23",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "tailwindcss": "3.3.2",
        "typescript": "5.0.4"
    },
    "devDependencies": {
        "husky": "^8.0.3",
        "lint-staged": "^13.2.2",
        "prettier": "^2.8.8"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "npm run prettier",
            "eslint --fix",
            "git add"
        ],
        "*.{json,css,scss,md}": [
            "npm run prettier",
            "git add"
        ]
    }
}
